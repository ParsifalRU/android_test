<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView

                android:id="@+id/imgv"
                android:layout_width="628dp"
                android:layout_height="296dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:foregroundGravity="center"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.548"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="76dp"
                android:layout_height="26dp"
                android:layout_marginStart="124dp"
                android:layout_marginTop="308dp"
                android:fontFamily="@font/sk_modernist"
                android:lineHeight="26dp"
                android:textColor="@color/white"
                android:textSize="20sp"

                app:layout_constraintHorizontal_bias="0.490"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.cardview.widget.CardView

                android:id="@+id/crdvw_out"
                android:layout_width="87.13dp"
                android:layout_height="87.13dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="274.93dp"
                android:foreground="@color/black_2"
                app:cardCornerRadius="12.57dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView

                android:id="@+id/crdvw_out2"
                android:layout_width="85.13dp"
                android:layout_height="85.13dp"
                android:layout_marginStart="24.93dp"
                android:layout_marginTop="275.93dp"
                android:foreground="@color/black"
                app:cardCornerRadius="12.57dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView

                android:id="@+id/crdvw"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_marginStart="41dp"
                android:layout_marginTop="290.93dp"
                android:background="@color/black"
                app:cardCornerRadius="12.57dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <ImageView
                    android:id="@+id/img_logo"
                    android:layout_width="85dp"
                    android:layout_height="125dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="10.93dp"
                    android:background="@color/black"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_baseline_data_usage_24"
                    tools:ignore="MissingConstraints" />
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatRatingBar
                android:id="@+id/rtb"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="78dp"
                android:layout_height="14dp"
                android:layout_marginStart="124dp"
                android:layout_marginTop="5dp"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="5"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_title" />

            <TextView
                android:id="@+id/tv70"
                android:layout_width="26dp"
                android:layout_height="14dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="340dp"

                android:fontFamily="@font/sk_modernist"
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.490"
                app:layout_constraintLeft_toRightOf="@+id/rtb"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView

                android:id="@+id/card_moba"
                android:layout_width="53dp"
                android:layout_height="22dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24.93dp"

                app:cardBackgroundColor="@color/blue"
                app:cardCornerRadius="12dp"
                app:layout_constraintBottom_toBottomOf="parent"

                app:layout_constraintHorizontal_bias="0.092"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/crdvw_out"
                app:layout_constraintVertical_bias="0.0">

                <TextView

                    android:id="@+id/tv_moba"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/blue_blue"
                    android:textSize="10sp" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_strat"
                android:layout_width="93dp"
                android:layout_height="22dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="24.93dp"
                android:layout_marginRight="235dp"
                app:cardBackgroundColor="@color/blue"

                app:cardCornerRadius="12dp"

                app:layout_constraintStart_toEndOf="@+id/card_moba"
                app:layout_constraintTop_toBottomOf="@+id/crdvw_out">

                <TextView
                    android:id="@+id/tv_multip"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/blue_blue"
                    android:textSize="10sp" />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/card_str"
                android:layout_width="73dp"
                android:layout_height="22dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="24.93dp"
                android:layout_marginRight="132dp"
                app:cardBackgroundColor="@color/blue"
                app:cardCornerRadius="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.067"
                app:layout_constraintStart_toEndOf="@+id/card_strat"
                app:layout_constraintTop_toBottomOf="@+id/crdvw_out"
                app:layout_constraintVertical_bias="0.0">

                <TextView
                    android:id="@+id/tv_strat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/blue_blue"
                    android:textSize="10sp" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="327dp"
                android:layout_height="76dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="28dp"
                android:fontFamily="@font/sk_modernist"
                android:gravity="top"
                android:lineHeight="19dp"
                android:lineSpacingExtra="5sp"
                android:textColor="@color/no_white"
                android:textSize="12sp"
                android:translationY="-2.3sp"

                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_strat" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>